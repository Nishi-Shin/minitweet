     <div class="row">
        <div class="col s8 offset-s2">
          <% @tweets.each do |tweet| %>
            <div class="card">
              <div class="card-image">
                <img src=<%= tweet.image%>>
                <span class="card-title">Card Title</span>
              </div>
              <div class="card-content">
                  <div class="content_post">
                    <%= simple_format(tweet.text) %>
                  </div>
              </div>
              <div class="card-action">
                <ul class="more_list">
                  <li>
                    <a href="#"><%= tweet.name %></a>
                  </li>
              </div>
            </div>
          <% end %>
          <%= paginate(@tweets) %>
        </div>
      </div>